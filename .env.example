# ============================================================================
# VOLGUARD PRODUCTION CONFIGURATION
# ============================================================================

# API Configuration
API_TITLE="VolGuard Trading System"
API_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT="production"

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=volguard
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=volguard_production

# Redis
REDIS_URL=redis://localhost:6379

# Upstox API
UPSTOX_ACCESS_TOKEN=your_upstox_token_here
UPSTOX_BASE_V2=https://api.upstox.com/v2
UPSTOX_BASE_V3=https://api.upstox.com/v3

# Trading Configuration
BASE_CAPITAL=1000000
MARGIN_SELL=120000
MARGIN_BUY=30000
MAX_DAILY_LOSS=20000
MAX_POSITION_SIZE=100

# Risk Limits
MAX_NET_DELTA=0.40
MAX_SINGLE_LEG_DELTA=0.60
MAX_GAMMA=0.15
MAX_VEGA=1000

# Supervisor Configuration
SUPERVISOR_LOOP_INTERVAL=3.0
SUPERVISOR_MAX_CYCLE_TIME=10.0
SUPERVISOR_WEBSOCKET_ENABLED=true

# WebSocket
WEBSOCKET_RECONNECT_DELAY=5.0
WEBSOCKET_MAX_INSTRUMENTS=50

# Adjustment Limits
MIN_ADJUSTMENT_INTERVAL_MINUTES=5
MAX_ADJUSTMENTS_PER_HOUR=10

# Journaling
JOURNAL_EVERY_CYCLE=true
JOURNAL_RETENTION_DAYS=30

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090
