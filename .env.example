# ============================================================================
# VOLGUARD PRODUCTION CONFIGURATION
# ============================================================================

# --- SECURITY (CRITICAL) ---
# This is the password for the /emergency_stop API. 
# DO NOT use your Upstox Token here.
ADMIN_SECRET="change_this_to_something_secure_and_complex"

# --- API Configuration ---
API_TITLE="VolGuard Trading System"
API_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT="production" 
# Options: "production" (Shadow), "production_semi" (Semi-Auto), "production_live" (Full Auto)

# --- Database ---
POSTGRES_SERVER=localhost
POSTGRES_USER=volguard
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=volguard_production

# --- Redis ---
REDIS_URL=redis://localhost:6379

# --- Upstox API ---
UPSTOX_ACCESS_TOKEN=your_upstox_token_here
UPSTOX_BASE_V2=https://api.upstox.com/v2
UPSTOX_BASE_V3=https://api.upstox.com/v3
# Optional fields if you implement login flow later:
UPSTOX_API_KEY=
UPSTOX_API_SECRET=
UPSTOX_REDIRECT_URI=

# --- Trading Configuration ---
BASE_CAPITAL=1000000
MARGIN_SELL=120000
MARGIN_BUY=30000
MAX_DAILY_LOSS=20000
MAX_POSITIONS=10
MAX_POSITION_SIZE=100

# --- Risk Limits ---
MAX_NET_DELTA=0.40
MAX_SINGLE_LEG_DELTA=0.60
MAX_GAMMA=0.15
MAX_VEGA=1000
MARGIN_BUFFER=0.20

# --- Supervisor Configuration ---
SUPERVISOR_LOOP_INTERVAL=3.0
SUPERVISOR_MAX_CYCLE_TIME=10.0
SUPERVISOR_WEBSOCKET_ENABLED=true

# --- WebSocket ---
WEBSOCKET_RECONNECT_DELAY=5.0
WEBSOCKET_MAX_INSTRUMENTS=50

# --- Adjustment Limits ---
MIN_ADJUSTMENT_INTERVAL_MINUTES=5
MAX_ADJUSTMENTS_PER_HOUR=10

# --- Journaling ---
JOURNAL_EVERY_CYCLE=true
JOURNAL_RETENTION_DAYS=30

# --- Monitoring & Alerting ---
# Required for AlertService to send critical notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SENTRY_DSN=
PROMETHEUS_PORT=9090
