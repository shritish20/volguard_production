# ============================================================================
# VOLGUARD 3.0 PRODUCTION CONFIGURATION
# ============================================================================

# --- APP INFO ---
PROJECT_NAME="VolGuard Algorithmic Trading"
VERSION="3.0.0"
DEBUG=false

# --- ENVIRONMENT & MODE ---
# Options: "shadow" (Monitoring Only), "production_semi" (Approval Req), "production_live" (Full Auto)
ENVIRONMENT="shadow"

# --- SECURITY (CRITICAL) ---
# This is the password for the /emergency_stop API and Admin actions.
ADMIN_SECRET="change_this_to_something_secure_and_complex"

# --- DATABASE (POSTGRES) ---
POSTGRES_SERVER=postgres
POSTGRES_USER=volguard
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=volguard_production
# Optional: Full URL overrides the above if set
# DATABASE_URL=postgresql+asyncpg://volguard:pass@localhost/volguard_production

# --- CACHE (REDIS) ---
REDIS_URL=redis://redis:6379

# --- UPSTOX API (CREDENTIALS) ---
# Required for TokenManager to auto-login
UPSTOX_CLIENT_ID=your_client_id
UPSTOX_CLIENT_SECRET=your_client_secret
UPSTOX_REDIRECT_URI=https://your-domain.com/callback

# --- UPSTOX TOKENS (MANAGED BY SCRIPTS) ---
# These are updated automatically by scripts/token_manager.py
UPSTOX_ACCESS_TOKEN=your_access_token_here
UPSTOX_REFRESH_TOKEN=your_refresh_token_here

# --- TRADING LIMITS (RISK CONTROLS) ---
BASE_CAPITAL=1000000.0
MAX_DAILY_LOSS=20000.0
MAX_POSITIONS=6
DEFAULT_LOT_SIZE=50
MAX_LOTS_PER_STRATEGY=3
MAX_TOTAL_LOTS=6

# --- MARGIN MODEL (APPROX) ---
MARGIN_SELL_PER_LOT=120000.0
MARGIN_BUY_PER_LOT=30000.0
MARGIN_BUFFER_PCT=0.20

# --- GREEK LIMITS ---
MAX_NET_DELTA=0.40
MAX_GAMMA=0.15
MAX_VEGA=1000.0

# --- STRATEGY FLAGS ---
ENABLE_DEFINED_RISK_STRATEGIES=true
ENABLE_UNDEFINED_RISK_STRATEGIES=false
ENABLE_RATIO_STRATEGIES=false
ENABLE_LONG_VOL_STRATEGIES=true

# --- SUPERVISOR TIMINGS ---
SUPERVISOR_LOOP_INTERVAL=3.0
SUPERVISOR_MAX_CYCLE_TIME=10.0
SUPERVISOR_WEBSOCKET_ENABLED=true
MIN_ENTRY_INTERVAL_SECONDS=300
REGIME_STABILITY_CYCLES=5

# --- EXECUTION SAFETY ---
MAX_ADJUSTMENTS_PER_HOUR=10
MAX_EXITS_PER_CYCLE=5
REQUIRE_UPSTOX_TOKEN_IN_PROD=true

# --- ALERTS & MONITORING ---
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id
SLACK_WEBHOOK_URL=
SENTRY_DSN=
